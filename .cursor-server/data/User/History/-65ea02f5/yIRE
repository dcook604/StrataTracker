# Stage 1: Build
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
COPY tsconfig.json ./
COPY server ./server
COPY shared ./shared
COPY client ./client

# Single npm install for all dependencies from root package.json
RUN npm install

# Build frontend (vite build client) and backend (esbuild) from /app
# The build script in package.json now handles targeting the client directory.
RUN ls -la client # Debug: List files in /app/client to verify index.html presence
RUN npm run build

# Stage 2: Run
FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist # Backend build output
COPY --from=builder /app/client/dist ./client/dist/ # Frontend build output
COPY --from=builder /app/node_modules ./node_modules

ENV NODE_ENV=production
EXPOSE 3000
CMD [ "node", "dist/index.js" ] 